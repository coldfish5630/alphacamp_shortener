    <script>
        function onCopyBtnClick () {
        const url = document.querySelector('#short-url').textContent
        navigator.clipboard
            .writeText(url)
            .then(() => alert('Success Copy!'))
            .catch(() => alert('something wrong!'))
        }
    </script>
